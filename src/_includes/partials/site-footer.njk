<footer id="site-footer" role="contentinfo" class="flow margin-block-start-xl padding-block-m">
  <hr />

  <div data-layout="cluster" data-cluster="center">
    <p>{% copyright %}</p>

    <a href="mailto:{{ site.a11y.contact }}?subject={{ site.a11y.subject }}&body={{ site.a11y.body }}"
       class="margin-inline-auto">Report an accessibility issue</a>

    <nav>
      <ul class="list-reset" data-layout="cluster">
        <li><a href="/privacy/">Privacy</a></li>
        {% for link in social %}
          {% set relAttr = "" %}
          {% set titleAttr = "" %}
          {% set content = link.text %}

          {% if link.rel %}
            {% set relAttr = " rel='" + link.rel + "'" %}
          {% endif %}

          {% if link.icon %}
            {% set titleAttr = " title='" + link.text + "'" %}
            {% set content %}{% include "icons/" + link.icon %}{% endset %}
          {% endif %}

          <li>
            <a href="{{ link.url }}"{{ relAttr | safe }}{{ titleAttr | safe }}>
              {{ content | safe }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</footer>
